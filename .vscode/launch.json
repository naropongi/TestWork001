    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/transaction_project",
            "args": [
                "app.main:app",
                "--reload",
                "--port=8080",
            ],
            "jinja": true
        },
        {
            "name": "Pytest coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "coverage",
            "cwd": "${workspaceFolder}/transaction_project",
            "args": [
                "run",
                "-m",
                "pytest",
                ".",
                "-s",
                "-vv",
                "tests"
            ]
        }
    ]
}